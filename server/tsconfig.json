{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "../dist/server",
    "rootDir": ".",
    "strict": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "../node_modules"]
}
